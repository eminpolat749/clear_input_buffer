#define _CRT_SECURE_NO_WARNINGS
#include<stdio.h>
void clear_input_buffer(void)
{
	int c;
	while ((c = getchar()) != '\n' && c != EOF)
		;
}
int main(void)
{
	int x, y;
	printf("bir tam sayi giriniz:");
	scanf("%d", &x);
	printf("bir tam sayi daha giriniz:");
	clear_input_buffer();
	scanf("%d", &y);
	printf("x = %d\ny = %d", x, y);
}
